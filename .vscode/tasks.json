{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ALL CPP Files",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-Command",
        "g++ -g -std=c++20 -Wall -Wextra (Get-ChildItem -Path '${workspaceFolder}' -Recurse -Filter *.cpp).FullName -o '${workspaceFolder}/build/program.exe'"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc",
      "presentation": {
        "clear": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}